<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/margin"
    android:layout_marginEnd="@dimen/margin"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:srcCompat="@drawable/icona_cinevibes_completa" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/impostazioni"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/modifica_profilo"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        app:icon="@drawable/baseline_edit_24">
    </Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ModalitÃ  scura"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/assistenza"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        app:icon="@drawable/baseline_help_outline_24" >
    </Button>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/log_out"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        app:icon="@drawable/baseline_no_accounts_24" >
    </Button>

</LinearLayout>